<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_scooter"
            android:id="@+id/img_scooter_fanpage"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/img_scooter_fanpage"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/txt_name_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_below="@id/txt_name_contact"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/img_scooter_fanpage"
            android:textSize="16sp"
            android:id="@+id/txt_phone_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp" />


        <Button
            android:paddingRight="16dp"
            android:gravity="end|center_vertical"
            android:id="@+id/btn_call_phone"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/colorAction"
            android:text="Gọi"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>